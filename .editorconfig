# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.json]
indent_size = 2
trim_trailing_whitespace = true
charset = utf-8

# (almost) all shell script files.
[*.{sh,zsh,fish,nu}]
indent_size = 4
end_of_line = lf

[*.ps1]
end_of_line = crlf
